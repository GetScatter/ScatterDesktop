{
  "name": "scatter",
  "version": "11.0.1",
  "private": true,
  "buttonText": "Scatter Desktop Companion",
  "author": {
    "name": "GetScatter",
    "email": "support@get-scatter.com",
    "url": "https://get-scatter.com/"
  },
  "scripts": {
    "build": "concurrently \"npm run copybuildfiles\" \"node build/build.js\"",
    "copybuildfiles": "copyfiles splash.html dist",
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "postinstall": "electron-rebuild --force",
    "release-linux": "electron-builder --linux",
    "release-mac": "electron-builder --mac",
    "release-win": "electron-builder --win",
    "start": "npm run dev",
    "testfile": "mocha --require test/babel --exit --timeout 1000000",
    "test": "npm run testfile \"test/**/*.spec.js\" --timeout 1000000"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^4.55.0",
    "@ledgerhq/hw-transport-node-hid": "^4.55.0",
    "aes-oop": "^1.0.4",
    "asn1-ber": "^1.0.9",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "bip32-path": "^0.4.2",
    "bip39": "^2.5.0",
    "chartist": "^0.11.0",
    "electron-store": "^3.2.0",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^5.2.0",
    "json-formatter-js": "^2.2.1",
    "murmurhash": "^0.0.2",
    "node-machine-id": "^1.1.10",
    "node-notifier": "^5.3.0",
    "scrypt-async": "^2.0.1",
    "vue-markdown": "^2.2.4",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-plugin-transform-vue-jsx": "^3.5.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "bignumber.js": "^7.2.1",
    "bitcoinjs-lib": "^5.0.4",
    "blockchain.info": "^2.12.1",
    "chai": "^4.2.0",
    "chalk": "^2.0.1",
    "compression-webpack-plugin": "^1.1.12",
    "concurrently": "^4.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.0.1",
    "cross-spawn": "^5.0.1",
    "css-loader": "^2.1.1",
    "electron": "^5.0.1",
    "electron-builder": "^20.39.0",
    "electron-rebuild": "^1.8.4",
    "eosjs": "^16.0.9",
    "eosjs-ecc": "^4.0.4",
    "eosjs2": "npm:eosjs@20.0.0-beta2",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "inject-loader": "^3.0.0",
    "jsdom": "^13.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^6.1.4",
    "mocha-jsdom": "^2.0.0",
    "node-sass": "^4.11.0",
    "ora": "^1.2.0",
    "portfinder": "^1.0.17",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.1.6",
    "postcss-url": "^7.2.1",
    "qrcode": "^1.2.2",
    "ridl": "^2.0.47",
    "rimraf": "^2.6.0",
    "sass-loader": "^7.1.0",
    "secp256k1": "^3.6.2",
    "semver": "^5.5.1",
    "sha3": "^2.0.2",
    "shelljs": "^0.7.6",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "spectron": "^5.0.0",
    "tronweb": "^2.6.4",
    "typeface-grand-hotel": "0.0.54",
    "typeface-roboto": "0.0.54",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^1.1.2",
    "v-tooltip": "^2.0.0-rc.33",
    "vue": "^2.6.10",
    "vue-loader": "^13.7.3",
    "vue-qrcode-reader": "^1.2.2",
    "vue-router": "^3.0.1",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.6.10",
    "vue-tour": "^1.0.1",
    "vuex": "^3.0.1",
    "web3": "^1.0.0-beta.54",
    "web3-provider-engine": "^14.0.6",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-server": "^2.11.3",
    "webpack-merge": "^4.1.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/GetScatter/ScatterDesktop/issues"
  },
  "build": {
    "productName": "scatter",
    "appId": "com.get-scatter.server",
    "artifactName": "${os}-${productName}-${version}-${arch}.${ext}",
    "asar": true,
    "asarUnpack": [
      "node_modules/node-notifier/vendor/**"
    ],
    "protocols": {
      "name": "electron-deep-linking",
      "schemes": [
        "scatter"
      ]
    },
    "files": [
      "dist/**/*",
      "static/**/*",
      "electron.js",
      "package.json"
    ],
    "publish": {
      "provider": "github"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Scatter"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "dmg": {
      "icon": "static/icons/icon.png",
      "contents": [
        {
          "x": 134,
          "y": 190
        },
        {
          "x": 344,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "static/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Network",
      "desktop": {
        "Name": "Scatter",
        "GenericName": "Scatter Desktop",
        "X-GNOME-FullName": "scatter",
        "Comment": "Scatter desktop signature server.",
        "Type": "Application",
        "Terminal": "false",
        "StartupNotify": "false",
        "Categories": "Network;"
      },
      "icon": "static/icons",
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "homepage": "https://get-scatter.com",
  "keywords": [
    "scatter",
    "blockchain",
    "signatures",
    "eos",
    "ethereum"
  ],
  "license": "MIT",
  "main": "electron.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GetScatter/ScatterDesktop.git"
  }
}
