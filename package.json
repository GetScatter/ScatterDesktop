{
  "name": "scatter",
  "version": "10.0.0",
  "description": "Scatter Desktop Companion",
  "private": true,
  "main": "electron.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GetScatter/ScatterDesktop.git"
  },
  "bugs": {
    "url": "https://github.com/GetScatter/ScatterDesktop/issues"
  },
  "keywords": [
    "scatter",
    "blockchain",
    "signatures",
    "eos",
    "ethereum"
  ],
  "homepage": "https://get-scatter.com",
  "author": {
    "name": "GetScatter",
    "email": "support@get-scatter.com",
    "url": "https://get-scatter.com/"
  },
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "start": "npm run dev",
    "testfile": "mocha --require test/babel --exit --timeout 1000000",
    "testfile2": "electron-mocha --require test/babel --exit --timeout 1000000",
    "test": "npm run testfile \"test/**/*.spec.js\" --timeout 1000000",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js --single-run",
    "e2e": "node test/e2e/runner.js",
    "copybuildfiles": "copyfiles splash.html dist",
    "build": "concurrently \"npm run copybuildfiles\" \"node build/build.js\"",
    "release-win": "electron-builder --win",
    "release-linux": "electron-builder --linux",
    "release-mac": "electron-builder --mac",
    "postinstall": "electron-rebuild --force"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^4.23.0",
    "@ledgerhq/hw-transport-node-hid": "^4.22.0",
    "aes-oop": "^1.0.4",
    "animate.css": "^3.7.0",
    "asn1-ber": "^1.0.9",
    "bip32-path": "^0.4.2",
    "bip39": "^2.5.0",
    "electron-settings": "^3.2.0",
    "electron-store": "^2.0.0",
    "eos-rc-parser": "^1.0.4",
    "es6-promise": "^4.2.5",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^5.2.0",
    "isomorphic-fetch": "^2.2.1",
    "json-formatter-js": "^2.2.1",
    "node-notifier": "^5.3.0",
    "scrypt-async": "^2.0.1",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "ridl": "^1.1.1",
    "typeface-grand-hotel": "0.0.54",
    "typeface-roboto": "0.0.54",
    "web3": "^1.0.0-beta.36",
    "web3-provider-engine": "^14.0.6",
    "tronweb": "^2.0.21",
    "eosjs": "^16.0.9",
    "eosjs-ecc": "^4.0.4",
    "eosjs2": "npm:eosjs@20.0.0-beta2",
    "vue": "^2.5.17",
    "vue-qrcode-reader": "^1.2.2",
    "vue-router": "^3.0.1",
    "vue-tour": "^1.0.1",
    "vuex": "^3.0.1",
    "v-tooltip": "^2.0.0-rc.33",
    "qrcode": "^1.2.2",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.26.0",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-plugin-transform-vue-jsx": "^3.5.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^4.2.0",
    "chalk": "^2.0.1",
    "chromedriver": "^2.42.0",
    "concurrently": "^4.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.0.1",
    "cross-spawn": "^5.0.1",
    "css-loader": "^0.28.0",
    "electron": "^2.0.10",
    "electron-builder": "^20.29.0",
    "electron-rebuild": "^1.8.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "inject-loader": "^3.0.0",
    "karma": "^1.4.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-phantomjs-shim": "^1.4.0",
    "karma-sinon-chai": "^1.3.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "nightwatch": "^0.9.12",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "phantomjs-prebuilt": "^2.1.14",
    "portfinder": "^1.0.17",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.1.6",
    "postcss-url": "^7.2.1",
    "rimraf": "^2.6.0",
    "sass-loader": "^7.1.0",
    "selenium-server": "^3.14.0",
    "semver": "^5.5.1",
    "shelljs": "^0.7.6",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "spectron": "^5.0.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^0.5.8",
    "vue-loader": "^13.7.3",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.11.3",
    "webpack-merge": "^4.1.4"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "build": {
    "productName": "scatter",
    "appId": "com.get-scatter.server",
    "artifactName": "${os}-${productName}-${version}-${arch}.${ext}",
    "asar": true,
    "asarUnpack": [
      "node_modules/node-notifier/vendor/**"
    ],
    "protocols": {
      "name": "electron-deep-linking",
      "schemes": [
        "scatter"
      ]
    },
    "files": [
      "dist/**/*",
      "static/**/*",
      "electron.js",
      "package.json"
    ],
    "publish": {
      "provider": "github"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Scatter"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "dmg": {
      "icon": "static/icons/icon.png",
      "contents": [
        {
          "x": 134,
          "y": 190
        },
        {
          "x": 344,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "static/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Network",
      "desktop": {
        "Name": "Scatter",
        "GenericName": "Scatter Desktop",
        "X-GNOME-FullName": "scatter",
        "Comment": "Scatter desktop signature server.",
        "Type": "Application",
        "Terminal": "false",
        "StartupNotify": "false",
        "Categories": "Network;"
      },
      "icon": "static/icons",
      "target": "AppImage"
    }
  }
}
